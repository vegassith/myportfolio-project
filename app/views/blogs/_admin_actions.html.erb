<% if logged_in?(:site_admin) %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb blogcrumb">  
            <%= link_to fa_icon('file-text-o'), toggle_status_blog_path(blog), style: blog_status_color(blog)  %>    
            <%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog) %>        
            <%= link_to fa_icon('trash-o'), blog, method: :delete, data: { confirm: 'Are you sure?' }  %>        
        </ol>
    </nav>
<% end %>