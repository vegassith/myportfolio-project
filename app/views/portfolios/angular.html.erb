<H1>Portfolio Items</H1>
  <div><%= link_to "Create New Portfolio", new_portfolio_path if logged_in?(:site_admin) %></div>
<% @angular_portfolio_items.each do |portfolio_item|%>
    <div>
        <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
    </div>
    <div>
        <%= portfolio_item.subtitle%>
    </div>
    <div>
        <%= portfolio_item.body%>
    </div>
    <div>
        <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    </div>

    <%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin)%>  
    <%= link_to "Delete", portfolio_item, method: "delete", data: { confirm: "Are you sure?"} if logged_in?(:site_admin)%> 
    
    <% end %>