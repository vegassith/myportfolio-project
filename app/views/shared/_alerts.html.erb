<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Protfolio App Notification", sticky: false, image: :notice ) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Protfolio App Error", sticky: false, image: :error ) %>
<% else flash[:notice] %>
    <%= js add_gritter(flash[:notice], title: "Protfolio App Notification", sticky: false, image: :notice ) %>
<% end %>